@import 'https://fonts.googleapis.com/css?family=Open+Sans:400,300,700|Oswald:400,700|Fjalla+One)'

body, html
  height 100%
  &:after
  	display block
    content ''
  	clear both

/**
* mudando o box model para border-box
*/
*, *:before, *:after
  vendor(box-sizing,'border-box')


/**
* classe que adiciona efeito de transicao aos elementos
*/
.transicao
	vendor(transition, all 0.6s ease)



/**
* reset margin & padding
*/
*
  padding 0
  margin 0 auto

h1, h2, h3, h4
  font-family $font-base
  text-align center



ul
  list-style none

a
  text-decoration none

body
  background $color-white

.container
  center(rem(960px))
  text-align center



.title1
  font-size $title1

.title2
  font-size $title2

.title3
  font-size $title3

.title4
  font-size $title4
